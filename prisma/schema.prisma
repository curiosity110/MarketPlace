datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  BUYER
  SELLER
  STAFF
  ADMIN
  CEO
}

enum ListingCondition {
  NEW
  USED
  REFURBISHED
}

enum ListingStatus {
  DRAFT
  ACTIVE
  INACTIVE
  REMOVED
}

enum Currency {
  EUR
  MKD
}

enum CategoryFieldType {
  TEXT
  NUMBER
  SELECT
  BOOLEAN
}

enum ReportTargetType {
  LISTING
  USER
}

enum ReportStatus {
  OPEN
  CLOSED
}

enum CategoryRequestStatus {
  PENDING
  APPROVED
  REJECTED
}

enum ContactRequestStatus {
  PENDING
  APPROVED
  REJECTED
}

model User {
  id                      String             @id @default(cuid())
  email                   String             @unique
  name                    String?
  phone                   String?
  username                String?
  company                 String?
  website                 String?
  bio                     String?
  address                 String?
  role                    Role               @default(SELLER)
  bannedAt                DateTime?
  createdAt               DateTime           @default(now())
  updatedAt               DateTime           @updatedAt
  listings                Listing[]
  sales                   Sale[]
  reports                 Report[]           @relation("ReporterReports")
  adminActions            AdminAction[]      @relation("AdminActions")
  categoryRequests        CategoryRequest[]
  contactRequestsSent     ContactRequest[]   @relation("ContactRequester")
  contactRequestsReceived ContactRequest[]   @relation("ContactSeller")
}

model Category {
  id             String                  @id @default(cuid())
  name           String
  slug           String                  @unique
  isActive       Boolean                 @default(true)
  parentId       String?
  parent         Category?               @relation("CategoryTree", fields: [parentId], references: [id], onDelete: SetNull)
  children       Category[]              @relation("CategoryTree")
  listings       Listing[]
  fieldTemplates CategoryFieldTemplate[]
  createdAt      DateTime                @default(now())
}

model City {
  id        String    @id @default(cuid())
  name      String
  slug      String    @unique
  listings  Listing[]
  createdAt DateTime  @default(now())
}

model Listing {
  id          String           @id @default(cuid())
  sellerId    String
  seller      User             @relation(fields: [sellerId], references: [id], onDelete: Cascade)
  title       String
  description String
  priceCents  Int
  currency    Currency         @default(EUR)
  categoryId  String
  category    Category         @relation(fields: [categoryId], references: [id])
  cityId      String
  city        City             @relation(fields: [cityId], references: [id])
  condition   ListingCondition
  status      ListingStatus    @default(DRAFT)
  activeUntil DateTime?
  images      ListingImage[]
  fieldValues ListingFieldValue[]
  reports     Report[]
  contactRequests ContactRequest[]
  sale        Sale?
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt

  @@index([status, activeUntil])
  @@index([title])
}

model Sale {
  id              String   @id @default(cuid())
  listingId       String   @unique
  listing         Listing  @relation(fields: [listingId], references: [id], onDelete: Cascade)
  sellerId        String
  seller          User     @relation(fields: [sellerId], references: [id], onDelete: Cascade)
  amountCents     Int
  currency        Currency
  platformFeeCents Int     @default(0)
  netAmountCents  Int
  soldAt          DateTime @default(now())
  createdAt       DateTime @default(now())

  @@index([sellerId, soldAt])
  @@index([soldAt])
}

model ContactRequest {
  id              String               @id @default(cuid())
  listingId       String
  listing         Listing              @relation(fields: [listingId], references: [id], onDelete: Cascade)
  requesterUserId String
  requester       User                 @relation("ContactRequester", fields: [requesterUserId], references: [id], onDelete: Cascade)
  sellerUserId    String
  seller          User                 @relation("ContactSeller", fields: [sellerUserId], references: [id], onDelete: Cascade)
  message         String
  status          ContactRequestStatus @default(PENDING)
  sellerResponse  String?
  createdAt       DateTime             @default(now())
  updatedAt       DateTime             @updatedAt
  approvedAt      DateTime?
  rejectedAt      DateTime?

  @@index([listingId, requesterUserId, createdAt])
  @@index([sellerUserId, status, createdAt])
}

model CategoryFieldTemplate {
  id          String            @id @default(cuid())
  categoryId  String
  category    Category          @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  key         String
  label       String
  type        CategoryFieldType
  optionsJson String?
  required    Boolean           @default(false)
  order       Int               @default(0)
  isActive    Boolean           @default(true)

  @@unique([categoryId, key])
  @@index([categoryId, order])
}

model ListingFieldValue {
  id        String   @id @default(cuid())
  listingId String
  listing   Listing  @relation(fields: [listingId], references: [id], onDelete: Cascade)
  key       String
  value     String

  @@unique([listingId, key])
  @@index([listingId])
}

model ListingImage {
  id        String   @id @default(cuid())
  listingId String
  listing   Listing  @relation(fields: [listingId], references: [id], onDelete: Cascade)
  url       String
  createdAt DateTime @default(now())
}

model Report {
  id             String           @id @default(cuid())
  reporterUserId String
  reporter       User             @relation("ReporterReports", fields: [reporterUserId], references: [id], onDelete: Cascade)
  targetType     ReportTargetType
  targetId       String
  listingId      String?
  listing        Listing?         @relation(fields: [listingId], references: [id], onDelete: SetNull)
  reason         String
  status         ReportStatus     @default(OPEN)
  createdAt      DateTime         @default(now())
  closedAt       DateTime?

  @@index([status, createdAt])
}

model AdminAction {
  id         String   @id @default(cuid())
  adminId    String
  admin      User     @relation("AdminActions", fields: [adminId], references: [id], onDelete: Cascade)
  actionType String
  targetType String
  targetId   String
  notes      String?
  createdAt  DateTime @default(now())

  @@index([createdAt])
}

model CategoryRequest {
  id           String                @id @default(cuid())
  requesterId  String
  requester    User                  @relation(fields: [requesterId], references: [id], onDelete: Cascade)
  desiredName  String
  description  String?
  parentId     String?
  status       CategoryRequestStatus @default(PENDING)
  adminNotes   String?
  createdAt    DateTime              @default(now())
  updatedAt    DateTime              @updatedAt

  @@index([status])
  @@index([createdAt])
}
